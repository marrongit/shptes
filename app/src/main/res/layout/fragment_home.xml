<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_fragment"
    tools:context="com.example.maguilar.shptes.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/bg" />

        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageHome"
            android:background="#ddd"
            android:padding="10dp"
            android:text="Categorias"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonMan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewCategory"
            android:foreground="@mipmap/ic_men_foreground" />

        <ImageButton
            android:id="@+id/imageButtonWoman"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textViewCategory"
            android:layout_centerHorizontal="true"
            android:foreground="@mipmap/ic_woman_foreground" />

        <ImageButton
            android:id="@+id/imageButtonChild"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageButtonMan"
            android:layout_below="@id/textViewCategory"
            android:foreground="@mipmap/ic_child_foreground" />

    </RelativeLayout>

</FrameLayout>
